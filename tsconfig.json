{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": { "@/*": ["src/*"] },
    "target": "esnext",
    "module": "esnext",
    "outDir": "dist",
    "types": ["@sa-mp/node", "@types/node"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
